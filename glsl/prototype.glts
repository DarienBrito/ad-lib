#pragma kinds VF
#if defined VS
attribute vec3 Apos;
#endif

uniform mat4 Umvp;
varying float Vid;

#if defined VS
void main(void) {
    vec4 position = Umvp * vec4 (Apos, 1.0);
	Vid = gl_VertexID;
	gl_Position = position;
}
#elif defined FS
void main(void) {
	gl_FragColor = vec4 (vec3 (Vid / 36), 0.5);
}
#endif

