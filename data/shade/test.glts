#pragma type cello
#pragma include simplevf

varying vec2 Vplanar;
#ifdef FS
vec3 fragment () {
	float radius = length (Vplanar);
    float inner = 0.4 + (radius - Uradius_min) / (Uradius_max - Uradius_min);

    float dist = length (Vplanar - Ucutout_center);
    if (dist > Ucutout_radius) discard;
	return 0.8 * Ucolour * inner;
}
#else
vec4 vertex () {
    vec4 position = Umvp * vec4 (Apos2d, 0.0, 1.0);

	Vplanar = Apos2d;
    return position;
}
#endif

