#pragma type cosmosA
#pragma include planet_glue
#ifdef FS
vec3 fragment () {
    float radius = discard_test ();
    float effect = sqrt (1.0 - radius);

    vec3 normal = the_normal ();
    vec3 result = textureCube (Utexture, normal).rgb;

    float brightness = 1.0;
    result += 0.5 * U.colour;
    result *= brightness;
    result *= effect;

	return result;
}
#endif

